{
  "name": "shinkan.today",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run watch & npm run server",
    "build": "npm run rsync && npm run rollup-main && npm run rollup-book && npm run postcss",
    "deploy": "npm run build && npm run update && gh-pages -d dist",
    "rollup-main": "rollup -c -i src/main.js -o dist/main.js",
    "rollup-book": "rollup -c -i src/book.js -o dist/book.js",
    "rsync": "rsync -avu --exclude '*.tag' --exclude '*.js' --exclude '*.css' --exclude '*.sketch' src/ dist/",
    "watch": "chokidar 'src/**' -c 'npm run build'",
    "server": "browser-sync start --files 'dist/main.js' --server dist",
    "update": "node --harmony-async-await --require reify update",
    "postcss": "postcss -u postcss-cssnext -u postcss-import -d dist/ src/global.css src/book.css"
  },
  "dependencies": {
    "fecha": "^2.3.0",
    "normalize-css": "^2.3.1",
    "riot": "^3.1.0",
    "riot-route": "^3.1.0",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "JSONStream": "^1.3.0",
    "browser-sync": "^2.18.2",
    "chokidar-cli": "^1.2.0",
    "del": "^2.2.2",
    "gh-pages": "^0.12.0",
    "highland": "^2.10.1",
    "js-yaml": "^3.7.0",
    "lodash.get": "^4.4.2",
    "moment": "^2.17.1",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "reify": "^0.4.4",
    "request": "^2.79.0",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-riot": "^1.0.0"
  }
}
