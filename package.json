{
  "name": "shinkan.today",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "npm run standard && npm run mocha",
    "build": "npm run rsync && npm run rollup-main && npm run rollup-book && npm run postcss",
    "start": "npm run watch & npm run server",
    "standard": "standard *.js lib/*.js src/*.js",
    "mocha": "mocha --require reify test/",
    "rsync": "rsync -avu --exclude '*.tag' --exclude '*.js' --exclude '*.css' --exclude '*.sketch' src/ dist/",
    "rollup-main": "rollup -c -i src/main.js -o dist/main.js -f iife",
    "rollup-book": "rollup -c -i src/book.js -o dist/book.js -f iife",
    "postcss": "npm run postcss-global && npm run postcss-book",
    "postcss-global": "postcss -u postcss-cssnext -u postcss-import -d dist/ src/global.css",
    "postcss-book": "postcss -u postcss-cssnext -u postcss-import -d dist/ src/book.css",
    "watch": "chokidar 'src/**' -c 'npm run build'",
    "server": "browser-sync start --files 'dist/main.js' --server dist",
    "update": "node --require reify update",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "fecha": "^2.3.1",
    "normalize-css": "^2.3.1",
    "riot": "^3.6.3",
    "riot-route": "^3.1.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "JSONStream": "^1.3.1",
    "browser-sync": "^2.29.1",
    "chokidar-cli": "^1.2.0",
    "del": "^3.0.0",
    "fs-promise": "^2.0.3",
    "gh-pages": "^1.0.0",
    "highland": "^2.11.1",
    "js-yaml": "^3.9.1",
    "lodash.get": "^4.4.2",
    "mocha": "^10.2.0",
    "moment": "^2.18.1",
    "postcss": "^6.0.10",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.1.0",
    "reify": "^0.12.0",
    "request": "^2.81.0",
    "rollup": "^0.49.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-riot": "^1.1.0",
    "standard": "^10.0.3"
  }
}
